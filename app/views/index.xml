<Alloy>
	<Collection src="Farmacos"/>
	<Window class="container" layout="vertical" onClose="cleanup" >
		<TableView>
			<TableViewRow>
				<View layout="horizontal">
					<Label text="Seleccione el fármaco: " width="50%"></Label>
					<Picker onChange="farmaco" class="picker" >
						<PickerColumn dataCollection="Farmacos" width="50%" >
        	    			<PickerRow title="{Farmaco}" ></PickerRow>
      	  				</PickerColumn>
        			</Picker>
        		</View>
        	</TableViewRow>
        	<TableViewRow>
				<View layout="horizontal">
					<Label text="Introduzca el peso en kg: " width="70%"></Label>
					<TextField id="Peso" onChange="peso" keyboardType="TI.UI.KEYBOARD_DECIMAL_PAD" width="30%" ></TextField>
        		</View>
        	</TableViewRow>
        	<TableViewRow>
        		<View layout="horizontal">
        			<Label text="Rango terapeútico en μg/Kg/min: " width="72%" ></Label>	
        			<Label id="RangoTerap" width="28%" ></Label>	
        		</View>
        	</TableViewRow>
        	<TableViewRow>
        		<View layout="horizontal">
        			<Label text="Dosis terapeútica en μg/Kg/min: " width="70%"></Label>
					<TextField id="Dosis" onChange="dosis" keyboardType="TI.UI.KEYBOARD_DECIMAL_PAD" width="30%" ></TextField>
        		</View>
        	</TableViewRow>
        	<TableViewRow>
        		<View layout="horizontal">
        			<Label id="VolDilT" width="72%" ></Label>	
        			<Label id="VolDil" width="28%" ></Label>	
        		</View>
        	</TableViewRow>
        	<TableViewRow>
        	</TableViewRow>
        	<TableViewRow>
        		<View layout="horizontal">
        			<Label text="Fármaco a añadir en mg: " width="72%" ></Label>	
        			<Label id="FarmacoA" width="28%" ></Label>	
        		</View>
        	</TableViewRow>
        	<TableViewRow>
        	<View layout="horizontal">
					<Label text="Concentración multiplicada por: " width="70%"></Label>
					<Picker id="Concentracion" class="picker" >
						<PickerRow id="tit1" title="1" ></PickerRow>
						<PickerRow id="tit2" title="2" ></PickerRow>
						<PickerRow id="tit3" title="3" ></PickerRow>
						<PickerRow id="tit4" title="4" ></PickerRow>
						<PickerRow id="tit5" title="5" ></PickerRow>
						<PickerRow id="tit6" title="6" ></PickerRow>
						<PickerRow id="tit7" title="7" ></PickerRow>
						<PickerRow id="tit8" title="8" ></PickerRow>
						<PickerRow id="tit9" title="9" ></PickerRow>
						<PickerRow id="tit10" title="10" ></PickerRow>
        			</Picker>
        		</View>
        	</TableViewRow>
        	<TableViewRow>
        		<View layout="horizontal">
        		 	<ImageView image="/images/logo.png" />
        		</View>
        	</TableViewRow>
        </TableView>
	</Window>
</Alloy>